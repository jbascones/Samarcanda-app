<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="15dp"
    android:background="@color/colorPrimaryLight">

    <ImageView
        android:id="@+id/id_element_icon"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:contentDescription="icon" />

    <TextView
        android:id="@+id/id_element_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/id_element_icon"
        android:layout_toEndOf="@id/id_element_icon"
        android:layout_toRightOf="@id/id_element_icon"
        android:text="Cliente/Articulo"
        android:textAppearance="@style/cardItemPersonName" />

    <TextView
        android:id="@+id/id_element_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/id_element_id"
        android:layout_alignStart="@id/id_element_id"
        android:layout_below="@id/id_element_id"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/id_element_icon"
        android:text="Primera linea"
        android:textAppearance="@android:style/TextAppearance.Holo"
        android:layout_toLeftOf="@+id/id_cancelar_cliente"
        android:layout_toStartOf="@+id/id_cancelar_cliente" />

    <TextView
        android:id="@+id/firstLineDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/id_element_id"
        android:textColor="@color/bgGradientStart" />

    <Button
        android:id="@+id/id_cancelar_cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/firstLineDate"
        android:background="@color/mb_red"
        android:onClick="cancelarCliente"
        android:text="Cancelar" />

</RelativeLayout>