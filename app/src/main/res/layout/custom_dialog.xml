<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/foto_pop_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/inicio" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="5dp">

            <Button
                android:id="@+id/btnBuy"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:theme="@style/ThemeOverlay.MyDarkButton"
                android:text="RESERVAR"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/pop_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/btnBuy"
                android:text="Titulo"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pop_subtitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pop_titulo"
                android:layout_toLeftOf="@+id/btnBuy"
                android:layout_toStartOf="@+id/btnBuy"
                android:text="Precio"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/pop_subtitulo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pop_subtitulo"
                android:layout_toLeftOf="@+id/btnBuy"
                android:layout_toStartOf="@+id/btnBuy"
                android:text="Unidades"
                android:textSize="16sp" />

        </RelativeLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/black"
        android:src="@android:drawable/ic_menu_close_clear_cancel" />


</RelativeLayout>